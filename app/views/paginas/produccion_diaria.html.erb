<%= params.inspect %>
<h1>Paginas#produccion_diaria</h1>
<table>
	<thead>
		<tr>
			<% @productos.each do |producto| %>
				<td><%= producto.nombre %></td>
			<% end%>
		</tr>
	</thead>
	<tbody>
	<% ids_producto = @productos.ids %>

	<%= form_for @archivo, url: update_produccion_diaria_path(@archivo.id) do |f| %>
		<% @numero_de_dias.times do |index| %>
			<tr>
				<% 3.times do |index_producto| %>
					<td>
						<input id="archivo_productos_attributes_<%=index_producto%>_produccion_diaria_attributes_<%=index%>_cantidad" name="archivo[productos_attributes][<%=index_producto%>][produccion_diaria_attributes][<%=index%>][cantidad]" type="text">
					</td>
					<input id="archivo_productos_attributes_<%=index_producto%>_id" name="archivo[productos_attributes][<%=index_producto%>][id]" type="hidden" value="<%=ids_producto[index_producto]%>">
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
	<p>
		<%= f.submit "Submit" %>
	</p>
<% end %>



<hr/>
<hr/>
<h2>Lo de abajo es para deploy (ignorarlo, no saldrá en la aplicación final)</h2>
<%= @archivo.nombre %>
<hr/>
<% @productos.each do |producto|%>
	Nombre: <%= producto.nombre %>
	<% producto.variables_de_produccion.each do |variable| %>
		<%= variable.nombre%>
		<%= variable.valor%>
	<% end %>
	<br/>
<%end %>
