<h3>Ingrese las variables de producci√≥n:</h3>
<hr/>
<% variables = ['Mano de Obra', 'Tiempo', 'Insumos'] %>
<table class='table table-striped'>
	<thead>
		<tr>
			<th class='text-center'>Producto</th>
			<% variables.each do |variable|%>
				<th class='text-center'><%= variable %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<%= form_for @archivo, url: update_variables_produccion_path(@archivo.id) do |f| %>
		<%= f.fields_for :productos do |producto| %>
			<tr>
				<td class="text-center"><%= producto.text_field :nombre, readonly: 'readonly'%></td>

				<%= producto.fields_for :variables_de_produccion do |variable| %>
					<%= variable.hidden_field :nombre%>
					<td class="text-center"><%= variable.text_field :valor %></td>
				<% end %>

			</tr>
		<% end %>
	</tbody>
</table>
	<div class='text-right'>
		<%= f.submit "Siguiente", class: 'btn btn-lg btn-primary' %>
	</div>
	<% end %>