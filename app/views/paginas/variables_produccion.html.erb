<h1>Ingrese las variables de producci√≥n</h1>

<% variables = ['Mano de Obra', 'Tiempo', 'Insumos'] %>
<table>
	<thead>
		<tr>
			<th>Producto</th>
			<% variables.each do |variable|%>
				<th><%= variable %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<%= form_for @archivo, url: guardar_variables_produccion_path(@archivo.id) do |f| %>
		<%= f.fields_for :productos do |producto| %>
			<tr>
				<td><%= producto.text_field :nombre %></td>

				<%= producto.fields_for :variables_de_produccion do |variable| %>
					<%= variable.hidden_field :nombre%>
					<td><%= variable.text_field :valor %></td>
				<% end %>

			</tr>
		<% end %>
	</tbody>
</table>
	<p>
		<%= f.submit "Submit" %>
	</p>
	<% end %>