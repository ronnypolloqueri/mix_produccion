<h1>Programación a corto Plazo</h1>

<%= form_for @archivo , url: guardar_productos_path, html: {class: 'form-horizontal'} do |f| %>
<% if @archivo.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@archivo.errors.count, "error", "errores") %> no le <%= @archivo.errors.count>1? "permiten": "permite" %> continuar:</h3>

    <ul>
    <% @archivo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
	<div class="form-group">
		<%= f.label 'Nombre del archivo:', class: 'col-sm-2 control-label'%>
		<div class="col-sm-8">
			<%= f.text_field :nombre, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label 'Numero de días:', class: 'col-sm-2 control-label'%>
		<div class="col-sm-8">
			<%= f.text_field :num_de_dias, class: 'form-control' %>
		</div>
	</div>
<h3>Ingrese sus Productos</h3>
	<% producto_numero = 1 %>
	<%= f.fields_for :productos do |producto| %>
		<div class="form-group">
			<%= producto.label :nombre, "Producto #{producto_numero}:", class: 'col-sm-2 control-label' %>
			<div class="col-sm-8">
				<%= producto.text_field :nombre, class: 'form-control'  %>
			</div>
		</div>
		<% producto_numero += 1 %>
	<% end %>
	<hr/>
	<div class='col-sm-10 text-right'>
		<%= f.submit "Siguiente", class: 'btn btn-lg btn-primary'%>
	</div>
<% end %>
