		</tr>
	</thead>
	<tbody>
		<% @archivos.each do |archivo|%>
			<tr>
				<td><%= archivo.nombre.capitalize %></td>
				<td><%= archivo.created_at.strftime("%m/%d/%Y %T %p") %></td>
