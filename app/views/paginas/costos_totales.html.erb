<h3>Costos Totales</h3>
<hr/>
<table class="table table-striped">
	<thead>
		<tr>
			<% tabla = [] %>
			<% @matriz.each do |fila| %>
				<td class="h4 text-center"><%= fila[:nombre] %></td>
				<% tabla << fila[:cantidad]%>
			<% end%>
			<td class="h3 text-center">Total</td>
		</tr>
	</thead>
	<tbody>
		<% tabla[0].size.times do |index_cantidades|%>
			<% total = 0 %>
			<tr>
			<% tabla.size.times do |index|%>
			<td class="text-center">
				<% total += tabla[index][index_cantidades] unless index==1 %>
				<%= tabla[index][index_cantidades].round(8) %>
			</td>

			<% end %>
			<td class="text-center h4">
				<%= total.round(8) %>
			</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Atras', produccion_diaria_path(@archivo.id) %> | <%= link_to 'Volver al inicio', root_path %>